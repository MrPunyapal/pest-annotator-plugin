{
    "name": "mrpunyapal/pest-annotator-plugin",
    "description": "A Pest plugin that annotates uncovered classes and methods with clean, colorized output when running pest --coverage.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "pest",
        "coverage",
        "annotator",
        "testing",
        "php",
        "plugin"
    ],
    "authors": [
        {
            "name": "Punyapal Shah",
            "email": "mrpunyapal@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "pestphp/pest-plugin": "^3.0"
    },
    "require-dev": {
        "laravel/pint": "^1.14",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-arch": "^3.0",
        "phpstan/phpstan": "^2.0",
        "rector/rector": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "PestAnnotator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PestAnnotator\\Tests\\": "tests/"
        }
    },
    "extra": {
        "pest": {
            "plugins": [
                "PestAnnotator\\Plugin"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "lint": [
            "rector",
            "pint --parallel"
        ],
        "test:lint": [
            "rector --dry-run",
            "pint --test --parallel"
        ],
        "test:types": "phpstan analyse",
        "test:arch": "pest --filter=arch",
        "test:unit": "pest --parallel",
        "test": [
            "@test:lint",
            "@test:types",
            "@test:unit"
        ]
    }
}
