{
    "name": "mrpunyapal/pest-coverage-annotator",
    "description": "A CLI tool that parses Clover coverage XML reports and annotates uncovered classes and methods with a clean, colorized output.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "pest",
        "coverage",
        "annotator",
        "testing",
        "php",
        "clover",
        "cli"
    ],
    "authors": [
        {
            "name": "Mr Punyapal",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "symfony/console": "^7.0",
        "ext-dom": "*",
        "ext-libxml": "*"
    },
    "require-dev": {
        "laravel/pint": "^1.14",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-arch": "^3.0",
        "phpstan/phpstan": "^2.0",
        "rector/rector": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "PestCoverageAnnotator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PestCoverageAnnotator\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/annotate"
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "lint": [
            "rector",
            "pint --parallel"
        ],
        "refactor": "rector",
        "test:lint": [
            "rector --dry-run",
            "pint --test --parallel"
        ],
        "test:refactor": "rector --dry-run",
        "test:types": "phpstan analyse",
        "test:arch": "pest --filter=arch",
        "test:unit": "pest --parallel",
        "test": [
            "@test:lint",
            "@test:types",
            "@test:unit"
        ]
    }
}
